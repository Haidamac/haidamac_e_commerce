<h1 class='mt-4'>Order # <%= @order_id %></h1>
<div class='address'>
  <h1><svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-envelope"
           viewBox="0 0 16 16">
    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2
          7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64
          3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
  </svg>
    Add address</h1>
  <%= form_tag({controller: 'orders', action: 'pay'}, method: :put, id: 'simplify-address-form') do %>
    <div class='mt-3'>
      <%= label_tag('fullname', 'Full Name (First and Last name):') %><br>
      <%= text_field_tag('fullname', nil, size: 45, autocomplete: 'on', autofocus: true, :required => true) %>
    </div>
    <div class='mt-3'>
      <%= label_tag('country', 'Country:') %><br>
      <%= text_field_tag('country', nil, size: 45, autocomplete: 'on', :required => true) %>
    </div>
    <div class='mt-3'>
      <%= label_tag('address', 'Address:') %><br>
      <%= text_field_tag('address', nil, size: 45, autocomplete: 'on', :placeholder => 'Street address or P.O.Box') %><br>
      <%= text_field_tag('address', nil, size: 45, autocomplete: 'on', :placeholder => 'Apt, suite, unit, building, floor etc') %>
    </div>
    <div class='mt-3'>
      <%= label_tag('city', 'City:') %>
      <%= text_field_tag('city', nil, size: 26, autocomplete: 'on', :required => true) %>
      <%= label_tag('pin', 'ZIP:') %>
      <%= text_field_tag('pin', nil, size: 6, autocomplete: 'on') %>
    </div>
    <div class='mt-3 me-0 ms-0 mb-4'>
      <%= label_tag('region', 'Region:') %>
      <%= text_field_tag('region', nil, size: 17, autocomplete: 'on') %>
      <%= label_tag('phone', 'Phone:') %>
      <%= text_field_tag('phone', nil, size: 10, autocomplete: 'on',
                         :pattern => '+[0-9]{3}-[0-9]{2}-[0-9]{3}-[0-9]{2}-[0-9]{2}',
                         :placeholder => '+380-00-000-00-00', :required => true) %>
    </div>
  <% end %>
</div>
<div class="payment-title">
  <h1><svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor"
           class="bi bi-credit-card-2-front" viewBox="0 0 16 16">
    <path d="M14 3a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h12zM2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2
             2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2z"/>
    <path d="M2 5.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1
             .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm3
             0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0
             1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5z"/>
  </svg>
    Payment Information</h1>
  <h5>Payment amount <%= number_to_currency @order.total_price %></h5>
</div>
<%= form_tag({controller: 'orders', action: 'pay'}, method: :put, id: 'simplify-payment-form') do %>
  <div>
    <%= label_tag('cardnumber', 'Credit Card Number:') %>
    <%= text_field_tag('cardnumber', nil, maxlength: 16, autocomplete: 'off', autofocus: true,
                       :pattern => '[0-9]{4}[0-9]{4}[0-9]{4}[0-9]{4}', :placeholder => '0000 0000 0000 0000',
                       :required => true) %>
  </div>
  <div>
    <%= label_tag('expirationdate', 'Expiry Date:') %>
    <%= select_month(Date.new(Date.today.year, 1).beginning_of_month, {use_two_digit_numbers: true},
                     {id: 'expirationmonth'}) %>
    <%= select_year(Date.today, {start_year: Date.today.year, end_year: Date.today.year+10}, {id: 'expirationyear'}) %>
    <%= label_tag('securitycode', 'CVC:') %>
    <%= text_field_tag('securitycode', nil, size: 3, autocomplete: 'off', :pattern => '[0-9]{3}',
                       :placeholder => '000', :required => true) %>
  </div>
  <%= button_to order_pay_path, method: :put, class: 'btn btn-outline-primary' do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-coin"
         viewBox="0 0 16 16">
      <path d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-
               1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-
               1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9H5.
               5zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.
               435 1.048.91 0 .542-.412.914-1.135.982V8.518l.087.02z"/>
      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
      <path d="M8 13.5a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11zm0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12z"/>
    </svg>
    Process Payment
  <% end %>
<% end %>
