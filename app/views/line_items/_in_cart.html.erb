<% return unless current_order.line_items.where(product_id: product.id).present? %>
<div class='d-md-flex'>
  <%= link_to current_order_path, class: 'btn btn-success btn-sm', style: 'margin-right:11px;' do %>
    In
    <svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' class='bi bi-cart4' viewBox='0 0 16 16'>
      <path d='M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z'/>
    </svg>
  <% end %>
  <!-- reduce -->
  <%= button_to line_item_path(:id => @line_item), params: { change_quantity: 'reduce' }, method: :put,
                class: 'btn btn-outline-danger btn-sm', style: 'padding-left:11px; padding-right:11px;' do %>
    <span><b>-</b></span>
  <% end %>
  <p class='quantity'><%= @line_item.quantity %></p>
  <!-- add -->
  <%= button_to line_item_path(:id => @line_item), params: { change_quantity: 'add' }, method: :put ,
                class: 'btn btn-outline-primary btn-sm', style: 'padding-left:9px; padding-right:9px;' do %>
    <span><b>+</b></span>
  <% end %>
</div>
